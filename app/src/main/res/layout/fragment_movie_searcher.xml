<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jaimequeraltgarrigos.moviesearcher.view.fragment.MovieSearcherFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true" android:layout_alignParentTop="true"
        android:orientation="vertical">
        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            android:hint="Serch movie here"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent" android:layout_height="wrap_content"
        />
    </LinearLayout>
</RelativeLayout>
